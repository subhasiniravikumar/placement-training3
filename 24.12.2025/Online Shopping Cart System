import java.util.*;

class Product {
    String name;
    double price;

    Product(String name, double price) {
        this.name = name;
        this.price = price;
    }
}

public class Main {
    public static void main(String[] args) {
        ArrayList<Product> cart = new ArrayList<>();
        cart.add(new Product("Mobile", 15000));
        cart.add(new Product("Headset", 2000));

        double total = 0;
        for (Product p : cart)
            total += p.price;

        System.out.println("Total Bill: " + total);
    }
}
