books = ["Python", "Java", "C++"]

while True:
    print("\n1.Add 2.Remove 3.View 4.Exit")
    ch = int(input("Choice: "))

    if ch == 1:
        books.append(input("Book name: "))
    elif ch == 2:
        books.remove(input("Book name: "))
    elif ch == 3:
        print(books)
    elif ch == 4:
        break
