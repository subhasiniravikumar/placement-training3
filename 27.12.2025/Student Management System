students = {}

while True:
    print("\n1.Add 2.View 3.Delete 4.Exit")
    ch = int(input("Enter choice: "))

    if ch == 1:
        roll = input("Roll No: ")
        name = input("Name: ")
        students[roll] = name
    elif ch == 2:
        print(students)
    elif ch == 3:
        roll = input("Roll No to delete: ")
        students.pop(roll, None)
    elif ch == 4:
        break
